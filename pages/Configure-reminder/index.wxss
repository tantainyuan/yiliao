/* 配置新提醒 */
.mian {
    height: 100%;
    background-color: #f0f3f5;
}

.main-title {
    padding: 25rpx 32rpx;
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(153, 155, 161, 1);
}

.main-content {
    padding-left: 31rpx;
    background-color: #fff;
    padding-right: 24rpx;
    border-top: 1rpx solid #d0d0d0;
    border-bottom: 1rpx solid #d0d0d0;
    
}

.type-item {
    display: flex;
    align-items: center;
    padding: 28rpx 0;
    font-size: 34rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(25, 29, 33, 1);
}
navigator:nth-child(2){
    border-top: 1rpx solid #d0d0d0;
    border-bottom: 1rpx solid #d0d0d0;

}
.type-item text {
    flex: 15
}

.type-item image {
    flex: 1;
    width: 16rpx;
    height: 25rpx;
}