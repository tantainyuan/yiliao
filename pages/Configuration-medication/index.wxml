<!--pages/Configuration-medication/index.wxml-->
<view class="main">
  <view class='rule-name'>
    <text class='tag'>规则名称</text>
    <input type='text' class='txt' value='' placeholder="请填写包装上的24位手环码" placeholder-class="placehoder"></input>
  </view>
  <view class='trigger-type'>
    服药提醒发送时间
  </view>
  <view class='time'>
    <view class='type-item'>
      <text>异常提醒</text>
      <image src="../../static/arrow.png" />
    </view>
    <view class='default-time'>
      <text>发送时间</text>
      <text>默认早晨9点发送(picker)</text>
    </view>
  </view>
  <!--文本输入框-->
  <view class='trigger-type'>
    填写提醒内容
  </view>
  <view class='text'>
    <textarea name="" cols="30" rows="10" placeholder="发送提醒内容">

    </textarea>
  </view>
  <!-- 按钮-->
  <view class="btn">
    <button>配置完成 选择目标</button>
  </view>
</view>