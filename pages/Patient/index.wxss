/* pages/Patient/index.wxss */
.search {
  padding: 24rpx;
  background: #00bee2;
}

.search_input {
  position: relative;
}

.search_input image {
  position: absolute;
  z-index: 999;
  top: 26rpx;
  left: 30rpx;
  width: 24rpx;
  height: 25rpx;
}

.search_input input {
  height: 72rpx;
  border-radius: 36rpx;
  background-color: #fff;
  padding-left: 65rpx
}

.input_o {
  font-size: 26rpx;


}

/* 筛选 */
.scree {
  display: flex;
  justify-content: space-around;
  height: 62rpx;
  line-height: 62rpx;
  padding: 10rpx 0;
}

.scree_l,
.scree_c,
.scree_r {
  flex: 1;
  font-size: 30rpx;
  color: #999BA1;
  text-align: center;
  border-right: 1px solid #D7D9DB;
}

.scree_r {
  border-right: none;
}

.scree_l image,
.scree_c image,
.scree_r image {
  width: 19rpx;
  height: 12rpx;
}

/* 病人信息开始 */
/* 头部 */
.information {
  padding-left: 27rpx;
}

.information .name {
  font-size: 32rpx;
  font-family: SourceHanSansSC-Regular;
  font-weight: 400;
  color: rgba(25, 29, 33, 1);
}

.information_t {
  display: flex;
  padding-top: 33rpx;
  line-height: 34rpx;
  margin-bottom: 28rpx;
}

.information_t .alarm {
  width: 149rpx;
  height: 34rpx;
  background: rgba(246, 78, 61, 1);
  border-radius: 17px;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  margin-left: 15rpx;

}

.alarm image {
  width: 18rpx;
  height: 22rpx;
  margin-right: 8rpx;
  line-height: 22rpx;
}

/* 中部 */
.information_c {
  display: flex;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 155, 161, 1);
  justify-content: center;
  align-items: center;
}

.information_c .img image {
  width: 15rpx;
  height: 24rpx;
}

.information_c .img {
  padding-right: 24rpx;
}

.centent1 {
  flex: 3;

}

.centent2 {
  flex: 1;
  display: flex;
  padding: 0rpx 24rpx;
  border-right: 1px solid #D7D9DB;
  border-left: 1px solid #D7D9DB;
  justify-content: center;
  align-items: center;
}

.centent3 {
  flex: 4;
  padding-left: 19rpx;

}

/* 底部 */
.information_b {
  margin-top: 25rpx;
  padding-bottom: 23rpx;
  display: flex;
  font-size: 26rpx;
  font-family: SourceHanSansSC-Regular;
  font-weight: 400;
  color: rgba(153, 155, 161, 1);
}

.information_b_1,
.information_b_2,
.information_b_3 {
  height: 46rpx;
  background: rgba(245, 246, 249, 1);
  border: 1rpx solid rgba(153, 155, 161, 1);
  border-radius: 23rpx;
  line-height: 46rpx;
  padding: 0 16rpx;
}

.information_b_2 {
  margin: 0 13rpx;
}

/* 病人信息结束 */

/* 遮罩层开始 */
/*显示整个conts */
.show {
  display: block;
}

/*隐藏整个conts */
.hide {
  display: none;
}

/*遮罩层 */
.shade {
  width: 100%;
  height: 100%;
  top: 200rpx;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 1;
  position: absolute;
}


.classify {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.classify_content {
  flex: 1;
  height: 80rpx;
  width: 100%;
  text-align: center;
  border-top: 1rpx solid #D7D9DB;
  line-height: 80rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 155, 161, 1);
}

/* 遮罩层结束*/

/* 编辑遮罩层 */
.shade1 {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 9999;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.edit {
  width: 647rpx;
  height: 161rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  font-size: 34rpx;
  font-family: SourceHanSansSC-Regular;
  font-weight: 400;
  color: rgba(25, 29, 33, 1);
}

.edit_t {
  border-bottom: 1rpx solid #D7D9DB;
  padding-left: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.edit_b {
  padding-left: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
}