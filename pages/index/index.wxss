/**index.wxss**/
.search{
   padding: 24rpx;
  background: #00bee2;
}.search-input {
  background: #fff;
  border-radius: 36rpx;
  height: 72rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: left;
  align-items: center;
  color: #999;
 padding-left: 20rpx
}
.search-input icon {
  margin-right: 10rpx;
  margin-top: 3rpx
}
/* 数据统计 */

.main_content{
  background-color: #f0f3f5;
  margin-bottom: 24rpx;
}
.data-shuju{
  position: relative;

}
.bg{
  height: 150rpx;
  background-color: #00bee2;
  border-radius: 0 0 50rpx 50rpx;
  margin-bottom: 124rpx;
  
}
.data-shuju .statistics{
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 24rpx;
  width: 100%;
  height: 240rpx;
  background-color: transparent;
  box-sizing:border-box;

}
 .statistics_content{
     background:rgba(255,255,255,1);
    box-shadow:0rpx 4rpx 6rpx 0rpx rgba(0, 0, 0, 0.1);
    border-radius:6rpx;
 }
 /* 顶部 */
 .statistics_top{
   height: 78rpx;
   padding-top: 18rpx;
 }
 .statistics_content .statistics_top{
   text-align: center;
   font-size: 24rpx;
   color: #999BA1;
   display: flex
 }
 .statistics_content .statistics_top .img {
   flex: 3;
   text-align: right;
 }
 .statistics_top .img image{
   width: 21rpx;
   height:20rpx;
 }
 .statistics_top .txt{
    flex: 4;
    text-align: left;
    
 }

 /* 中间 */
 .statistics_center {
   display: flex;
   justify-content: space-around;
   align-items: center;
 }
 .statistics_center_f,
 .statistics_center_r{
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   font-size: 24rpx;
   color: #999BA1;
 }
 .statistics_center .num{
   font-size: 54rpx;
   color: #191D21;
   font-weight: Medium;
 }
 /* 底部 */
 .statistics_bottom{
   display: flex;
   justify-content: center;
   padding-bottom:20rpx;
 }
 .statistics_bottom .text{
    height:23rpx;
    font-size:24rpx;
    font-family:SourceHanSansSC-Regular;
    font-weight:400;
    color:rgba(53,161,255,1);
    display: flex;
    flex-direction: column;
    justify-content: center;
 }
 .statistics_bottom .img{
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 5rpx;
 }
 .statistics_bottom .img image{
   width:26rpx;
    height:26rpx;
    background:rgba(53,161,255,1);
    border-radius:50%;
 }

 /* 卡片 */
 .card{
   padding: 0 24rpx;
   display: flex;
   justify-content: space-between;
   flex-wrap: wrap;
 }
 .manage{
    display: flex;
    width:340rpx;
    height:136rpx;
    background:rgba(255,255,255,1);
    border-radius:4rpx;
    justify-content: space-around;
    margin-bottom: 16rpx;
 }
 .manage:nth-child(n+2){
   margin-bottom: 0rpx;
 }
 .manage .manage_l{
  font-size:32rpx;
  font-family:SourceHanSansSC-Regular;
  font-weight:400;
  color:rgba(25,29,33,1);
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
 }
 .manage .manage_l .xingxi{
    font-size:22rpx;
    font-family:SourceHanSansSC-Light;
    font-weight:300;
    color:rgba(153,155,161,1);
 }
 .manage .manage_r image{
   width:136rpx;
   height:136rpx;
 }
 /* 随访 */
 .suifang {
   padding: 24rpx;
    display: flex;
    justify-content: space-between
 }
 .follow{
   width:227rpx;
  background:rgba(255,255,255,1);
  border-radius:4rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
 }
 .follow_top image{
   width: 136rpx;
   height: 136rpx;
 }
 .follow_center {
      font-size:32rpx;
      font-family:SourceHanSansSC-Regular;
      font-weight:400;
      color:rgba(25,29,33,1);
 }
 .follow_bottom {
    font-size:22rpx;
    font-family:SourceHanSansSC-Light;
    font-weight:300;
    color:rgba(153,155,161,1);
    margin-top: 13rpx;
    margin-bottom: 22rpx;
 }

