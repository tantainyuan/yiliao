/* pages/statistics/index.wxss */
.main {
  background-color: #f0f3f5;
}
/* 数据展示 */
.data-shuju{
  position: relative;
}
.bg{
  height: 193rpx;
  background-color: #00bee2;
  margin-bottom: 140rpx;
}
.data-shuju .statistics{
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 24rpx;
  width: 100%;
  height: 290rpx;
  background-color: transparent;
  box-sizing:border-box;

}
 .statistics_content{
     background:rgba(255,255,255,1);
    box-shadow:0rpx 4rpx 6rpx 0rpx rgba(0, 0, 0, 0.1);
    border-radius:6rpx;
 }

 /* 头部 */
 .statistics_top{
   height: 58rpx;
   display: flex;
   justify-content: space-between;
   padding: 0 20rpx;
 }
 .statistics_top .top_l {
   flex: 1;
   display: flex;
 }
 .statistics_top .top_r {
   flex: 1;
   text-align: right;
   font-size:24rpx;
    font-family:Roboto-Regular;
    font-weight:400;
    color:rgba(153,155,161,1);
    line-height: 58rpx;
 }
 
 .top_l .img image {
   width:21rpx;
    height:20rpx;
 }
  .top_l .txt {
    font-size:24rpx;
    font-weight:400;
    color:rgba(153,155,161,1);
    line-height: 58rpx;
  }

  /* 监控人数 */
.statistics_center{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.statistics_center .people_number{
      font-size:24rpx;
      font-weight:400;
      color:rgba(153,155,161,1);
}
.statistics_center .num {
  font-size:54rpx;
  font-family:Roboto-Medium;
  font-weight:500;
  color:rgba(25,29,33,1);
}

.statistics_bottom {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 25rpx;
  padding-top: 46rpx;
}
.statistics_bottom_l,
.statistics_bottom_c,
.statistics_bottom_r {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #D7D9DB
}
.statistics_bottom_r{
   border-right:0
}
.statistics_bottom_l .data_title,
.statistics_bottom_c .data_title,
.statistics_bottom_r .data_title{
    font-size:24rpx;
    font-family:SourceHanSansSC-Regular;
    font-weight:400;
    color:rgba(153,155,161,1);
}
.data_title image {
  width:7rpx;
  height:12rpx
}
.data_title .data_num {
  font-size:34rpx;
  font-weight:500;
  color:rgba(25,29,33,1);
}

/* 全部 */
.ball{
  padding: 0 24rpx;
  margin-bottom: 10rpx;
}
.all{
  display:flex;
  justify-content: space-around;
  height: 80rpx;
  text-align: center;
  background-color: #FFFFFF;
  line-height: 80rpx;
}
.all_l ,
.all_r {
  border-right: 1px solid #D7D9DB;
  align-items: center;
  flex: 1;
}
.all_r{
  border-right: 0
}
.all_l text ,
.all_r text{
    font-size:32rpx;
    font-family:SourceHanSansSC-Regular;
    font-weight:400;
    color:rgba(153,155,161,1);
}
.all_l image ,
.all_r image{
  width:19px;
  height:12px;
}
/* 异常警报 */
.abnormal{
  padding: 0 24rpx;
}
.abnormal .abnormal_title{
  padding-top: 28rpx;
  background-color: #fff
}
.abnormal_title text,
.distribution_title text {
  height: 25rpx;
  margin-left: 29rpx;
  padding-left: 20rpx;
  border-left: 7rpx solid #00C3D1;
  font-size:28rpx;
  font-family:SourceHanSansSC-Regular;
  font-weight:400;
  color:rgba(25,29,33,1);
}
/* 图 */
.abnormal .ech{
  width: 702rpx;
  height: 319rpx;
}
.abnormal ec-canvas{
  width: 100%;
}
