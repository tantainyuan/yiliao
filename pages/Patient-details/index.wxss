 /* pages/Patient-details/index.wxss */
 /* 头部导航开始 */
 .nav {
     background-color: #00BEE0;
     display: flex;
     justify-content: space-around;
     padding-top: 45rpx;
     padding-bottom: 10rpx;
     font-size: 32rpx;
     font-weight: 400;

 }

 .nav_name {
     color: rgba(255, 255, 255, 1);
     opacity: 0.7;
     position: relative;
     padding-bottom: 11rpx;
 }

 .active {
     border-bottom: 5rpx solid #fff;
     border-radius: 3rpx;
     opacity: 1;

 }

 /* 头部导航结束 */
 .main {
     background-color: #f0f3f5;
     padding: 0 24rpx;
 }

 .shuifang {
     background-color: #f0f3f5;
 }

 /* 患者信息 开始*/
 .information {
     width: 702rpx;
     height: 364rpx;
     background: rgba(255, 255, 255, 1);
     padding: 0 27rpx;
     display: flex;
     flex-direction: column;
 }

 .information_n {}

 .name {}

 /* 患者信息 结束*/

 /* 随访信息开始 */
 .time {
     display: flex;
     justify-content: space-around;
     height: 82rpx;
     line-height: 82rpx;
     color: #0295D2;
     border-bottom: 1rpx solid #D0D0D0;
     margin-bottom: 14rpx;

 }

 .time .xian {
     text-align: center;
     line-height: 82rpx;
     margin-top: 40rpx;
 }

 .time .xian view {
     width: 57rpx;
     height: 2rpx;
     background: rgba(208, 208, 208, 1);
 }

 /* 记录表 */
 .Record {
     display: flex;
     justify-content: space-between;
     padding: 0 24rpx;
     background: rgba(255, 255, 255, 1);
 }

 .Record_l {
     flex: 1;
     display: flex;
     flex-direction: column;
     justify-content: center;
     align-items: center;
 }

 .Record_l_top {
     flex: 1;
     font-size: 32rpx;
     font-family: SourceHanSansSC-Regular;
     font-weight: 400;
     color: rgba(25, 29, 33, 1);
     padding-top: 41rpx;
     padding-bottom: 31rpx;

 }

 .Record_l_bottom {
     flex: 1;
     padding-bottom: 49rpx;
     display: flex;
     font-size: 26rpx;
     font-family: Roboto-Regular;
     font-weight: 400;
     color: rgba(153, 155, 161, 1);
 }

 .Record_l_bottom image {
     margin-top: 3rpx;
     width: 24rpx;
     height: 24rpx;
 }

 .Record_r {
     flex: 1;
     text-align: right;
     padding-top: 73rpx;

 }

 .Record_r image {
     width: 15rpx;
     height: 24rpx;
 }

 /* 随访信息结束 */



 /* 提醒 */
 .use-remind {
     margin-bottom: 14rpx;
     background-color: #fff;
     z-index: 0;
     overflow: hidden;
 }

 .use-title,
 .old-title {
     padding: 36rpx 24rpx 47rpx;
     font-size: 28rpx;
     font-family: SourceHanSansSC-Regular;
     font-weight: 400;
     color: rgba(153, 155, 161, 1);
 }

 .use-content {
     margin-bottom: 65rpx;
     font-size: 32rpx;
     font-family: SourceHanSansSC-Regular;
     font-weight: 400;
     color: rgba(25, 29, 33, 1);
     display: flex;
     justify-content: space-between;
     padding-left: 45rpx;
     padding-right: 50rpx;
     line-height: 31rpx;
 }

 .use-content .txt image {
     width: 32rpx;
     height: 32rpx;
 }

 .use-content .del {
     color: #0295D2;
 }

 /* 历史提醒 */
 .old-remind {
     background-color: #fff;
     z-index: 0;
     overflow: hidden;
     height: 688rpx;
 }

 .old-content {
     display: flex;
 }

 .old-content_l {
     flex: 2;
     padding-left: 45rpx;
 }

 .old-content_l_top {
     font-size: 32rpx;
     font-family: SourceHanSansSC-Regular;
     font-weight: 400;
     color: rgba(25, 29, 33, 1);
 }

 .old-content_l_bottom {
     font-size: 28rpx;
     font-family: SourceHanSansSC-Regular;
     font-weight: 400;
     color: rgba(153, 155, 161, 1);
     padding-top: 18rpx;
     padding-bottom: 25rpx;
 }

 .old-content_r {
     flex: 1;
     text-align: right;
     padding-right: 50rpx;
     line-height: 80rpx;
 }

 .old-content_r image {
     width: 32rpx;
     height: 32rpx;
 }

 /* 按钮 */
 .btn {
     position:fixed;
     width: 100%;
     z-index: 999;
     top:1000rpx;
 }

 .btn button {
     width: 695rpx;
     height: 80rpx;
     background: rgba(0, 195, 209, 1);
     border-radius: 6rpx;
 }