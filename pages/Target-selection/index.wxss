/* pages/Target-selection/index.wxss */
/* 搜索 */
.search {
    padding: 24rpx;
    background: #00bee2;
}

.search_input {
    position: relative;
}

.search_input image {
    position: absolute;
    z-index: 999;
    top: 26rpx;
    left: 30rpx;
    width: 24rpx;
    height: 25rpx;
}

.search_input input {
    height: 72rpx;
    border-radius: 36rpx;
    background-color: #fff;
    padding-left: 65rpx
}

.input_o {
    font-size: 26rpx;


}

/* 赛选 */
/* 筛选 */
.scree {
    display: flex;
    justify-content: space-around;
    height: 62rpx;
    line-height: 62rpx;
    padding: 10rpx 0;
}

.scree_l,
.scree_c,
.scree_r {
    flex: 1;
    font-size: 30rpx;
    color: #999BA1;
    text-align: center;
    border-right: 1px solid #D7D9DB;
}

.scree_r {
    border-right: none;
}

.scree_l image,
.scree_c image,
.scree_r image {
    width: 19rpx;
    height: 12rpx;
}

/* 病人信息开始 */
/* 头部 */
.information {
    padding-left: 24rpx;
    display: flex;
    justify-content: space-between;
}

.formation-l {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.formation-r {
    flex: 5;
}

.information .name {
    font-size: 32rpx;
    font-family: SourceHanSansSC-Regular;
    font-weight: 400;
    color: rgba(25, 29, 33, 1);
}

.information_t {
    display: flex;
    padding-top: 33rpx;
    line-height: 34rpx;
    margin-bottom: 28rpx;
}




/* 中部 */
.information_c {
    display: flex;
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(153, 155, 161, 1);
    justify-content: center;
    align-items: center;
}



.centent1 {
    flex: 3;

}

.centent2 {
    flex: 1;
    display: flex;
    padding: 0rpx 24rpx;
    border-right: 1px solid #D7D9DB;
    border-left: 1px solid #D7D9DB;
    justify-content: center;
    align-items: center;
}

.centent3 {
    flex: 4;
    padding-left: 19rpx;

}

/* 底部 */
.information_b {
    margin-top: 25rpx;
    padding-bottom: 23rpx;
    display: flex;
    font-size: 26rpx;
    font-family: SourceHanSansSC-Regular;
    font-weight: 400;
    color: rgba(153, 155, 161, 1);
}

.information_b_1,
.information_b_2,
.information_b_3 {
    height: 46rpx;
    background: rgba(245, 246, 249, 1);
    border: 1rpx solid rgba(153, 155, 161, 1);
    border-radius: 23rpx;
    line-height: 46rpx;
    padding: 0 16rpx;
}

.information_b_2 {
    margin: 0 13rpx;
}

/* 病人信息结束 */



/* 复选框的样式 */
checkbox .wx-checkbox-input {
    border-radius: 50%;
    /* 圆角 */
    width: 45rpx;
    /* 背景的宽 */
    height: 45rpx;
    /* 背景的高 */
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    border: none;

}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    border-radius: 50%;
    width: 70rpx;
    height: 70rpx;
    line-height: 65rpx;
    text-align: center;
    font-size: 26rpx;
    /* 对勾大小 26rpx */
    color: #fff;
    /* 对勾颜色 */
    background: #000;
    border-color: #000;
}

/* 遮罩层开始 */
/*显示整个conts */
.show {
    display: block;
}

/*隐藏整个conts */
.hide {
    display: none;
}

/*遮罩层 */
.shade {
    width: 100%;
    height: 100%;
    top: 200rpx;
    background: rgba(0, 0, 0, 0.5);
    overflow: hidden;
    z-index: 1;
    position: absolute;
}


.classify {
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.classify_content {
    flex: 1;
    height: 80rpx;
    width: 100%;
    text-align: center;
    border-top: 1rpx solid #D7D9DB;
    line-height: 80rpx;
    font-size: 32rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(153, 155, 161, 1);
}

/* 遮罩层结束*/

/* 底部 */
.bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 750rpx;
    height: 98rpx;
    background: rgba(247, 247, 247, 1);
    line-height: 98rpx;
    font-size:32rpx;
}

.bottom-l,
.bottom-c,
.bottom-r {
    flex: 1;
}
.bottom-l{
    padding-left: 44rpx;
}
.bottom-r {
    background: #00BEE0;
    color: #fff;
    text-align: center;
}
.bottom-c{
    color: #999BA1
}
.bottom-c text {
    color: #000;
}
