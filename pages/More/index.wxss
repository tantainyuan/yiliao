/* pages/More/index.wxss */

/* 医生 */
.doctor {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    font-weight: 400;
    margin-bottom: 14rpx;
}

.portrait {
    background-color: pink;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    text-align: center;
    margin: 36rpx 305rpx 27rpx 305rpx
}

.portrait image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
}

.name {
    font-size: 32rpx;
    color: rgba(25, 29, 33, 1);
}

.add {
    font-size: 24rpx;
    color: rgba(153, 155, 161, 1);
    margin: 22rpx 0;
}

.label {
    width: 134rpx;
    height: 47rpx;
    background: rgba(0, 190, 224, 1);
    border-radius: 24rpx;
    margin: 36rpx 305rpx 27rpx 305rpx;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    line-height: 47rpx;
}

/* 修改密码 */
.modify-psw,
.out-login {
    display: flex;
    padding:29rpx 26rpx;
    border-top: 1rpx solid #d0d0d0;
    border-bottom: 1rpx solid #d0d0d0;

}
.out-login {
    border-top:none;
}

.modify-psw .psw-name,
.out-login .login-name {
    flex: 10;
}

.modify-psw .img,
.out-login .img {
    flex: 1;
    text-align: right;
}
.modify-psw .img image ,
.out-login .img image {
    
    width: 19rpx;
    height: 31rpx;
}