/* pages/Reminder-record/index.wxss */

.swiper-tab {
    background-color: #00BEE0;
    display: flex;
    justify-content: space-around;
    padding-top: 45rpx;
    padding-bottom: 10rpx;
    font-size: 32rpx;
    font-weight: 400;
}

.tab-item {
    color: rgba(255, 255, 255, 1);
    opacity: 0.7;
    position: relative;
    padding-bottom: 11rpx;
}

.active {
    border-bottom: 5rpx solid #fff;
    border-radius: 3rpx;
    opacity: 1;

}

/* 主体部分 */
.old-reminder {
    background-color: #fff;
}

/* 历史提醒 */
.mian {
    padding-left: 31rpx
}

.remider-title {
    padding-top: 30rpx;
    font-size: 28rpx;
    font-family: SourceHanSansSC-Medium;
    font-weight: 500;
    color: rgba(153, 155, 161, 1);
    display: flex;

}

.dian {
    margin-top: 15rpx;
    margin-right: 20rpx;
    width: 14rpx;
    height: 14rpx;
    background: rgba(208, 208, 208, 1);
    border-radius: 50%;
}

.old-content {
    display: flex;
    border-left: 1rpx solid #d0d0d0;
    margin-left: 5rpx;
}

.old-content_l {
    flex: 2;
    padding-left: 45rpx;
}

.old-content_l_top {
    font-size: 32rpx;
    font-family: SourceHanSansSC-Regular;
    font-weight: 400;
    color: rgba(25, 29, 33, 1);
}

.old-content_l_bottom {
    font-size: 28rpx;
    font-family: SourceHanSansSC-Regular;
    font-weight: 400;
    color: rgba(153, 155, 161, 1);
    padding-top: 18rpx;
    padding-bottom: 25rpx;
}

.old-content_r {
    flex: 1;
    text-align: right;
    padding-right: 50rpx;
    line-height: 80rpx;
}

.old-content_r image {
    width: 32rpx;
    height: 32rpx;
}

/* 使用中提醒 */
.tix {
    padding-top: 30rpx;
}

.use-content {
    margin-bottom: 65rpx;
    font-size: 32rpx;
    font-family: SourceHanSansSC-Regular;
    font-weight: 400;
    color: rgba(25, 29, 33, 1);
    display: flex;
    justify-content: space-between;
    padding-left: 45rpx;
    padding-right: 50rpx;
    line-height: 31rpx;
}

.use-content .txt image {
    width: 32rpx;
    height: 32rpx;
}

.use-content .del {
    color: #0295D2;
}

/* 遮罩层 */
.show {
    display: block;
}

/*隐藏整个conts */
.hide {
    display: none;
}

.shade1 {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    overflow: hidden;
    z-index: 1;
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.details {
    width: 608rpx;
    height: 586rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 8rpx;
    padding: 0 31rpx;
    position: relative;
}

.det-title {
    padding-top: 38rpx;
    padding-bottom: 40rpx;
    text-align: center;
    font-size: 34rpx;
    font-family: SourceHanSansSC-Medium;
    font-weight: 500;
    color: rgba(25, 29, 33, 1);
}

.det-item {
    display: flex;
    font-size: 30rpx;
    font-family: SourceHanSansSC-Regular;
    font-weight: 400;
    color: rgba(153, 155, 161, 1);
    padding-bottom: 41rpx;
}

.det-l {
    flex: 1;
}

.det-r {
    flex: 5;
}

/* 提醒内容 */
.remind-content {}

.remide-title,
.remide-txt {
    font-size: 30rpx;
    font-family: SourceHanSansSC-Regular;
    font-weight: 400;
    color: rgba(153, 155, 161, 1);
}

.remide-txt {
    color: black
}

.remide-title {
    padding-bottom: 19rpx;
}

.btn {
    width: 670rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    text-align: center;
    line-height: 88rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(2, 149, 210, 1);
}